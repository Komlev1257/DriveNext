<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/getting_started"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_1"
        android:layout_width="342dp"
        android:layout_height="560dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="138dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_view1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/login_account"
                android:textSize="24sp"
                android:textColor="#1A1A1A"
                android:textFontWeight="600"
                android:gravity="center"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/text_view2"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="@string/enter_data"
                android:textSize="14sp"
                android:textColor="#667085"
                android:textFontWeight="400"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_3"
            android:layout_width="342dp"
            android:layout_height="348dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_4"
                android:layout_width="342dp"
                android:layout_height="68dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/text_view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/email"
                    android:textSize="14sp"
                    android:textColor="#404040"
                    android:fontFamily="@font/montserrat_regular"/>
                <EditText
                    android:id="@+id/edit_text1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_register_button"
                    android:textColorHint="#667085"
                    android:fontFamily="@font/montserrat_light"
                    android:inputType="textEmailAddress"
                    android:hint="@string/enter_email"
                    android:textAlignment="textStart"
                    android:paddingStart="14dp"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/text_view3"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_5"
                android:layout_width="342dp"
                android:layout_height="68dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_4"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_view4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/password"
                    android:textSize="14sp"
                    android:textColor="#404040"
                    android:fontFamily="@font/montserrat_regular"/>

                <EditText
                    android:id="@+id/edit_text2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_register_button"
                    android:fontFamily="@font/montserrat_light"
                    android:inputType="textPassword"
                    android:hint="@string/enter_password"
                    android:textAlignment="textStart"
                    android:paddingStart="14dp"
                    android:textSize="14sp"
                    android:textColorHint="#667085"
                    app:layout_constraintTop_toBottomOf="@id/text_view4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/image_view1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_eye"
                    app:layout_constraintTop_toTopOf="@id/edit_text2"
                    app:layout_constraintEnd_toEndOf="@id/edit_text2"
                    app:layout_constraintBottom_toBottomOf="@id/edit_text2"
                    android:layout_marginEnd="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/forget_pass_textview"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_5"
                android:layout_marginTop="20dp"
                android:text="@string/forgot_pass"
                android:textColor="#2A1246"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="14sp"
                android:textFontWeight="500"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_6"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="14dp"
                    android:backgroundTint="#2A1246"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/login"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:cornerRadius="8dp"/>
                <Button
                    android:id="@+id/button_2"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/shape_register_button"
                    app:backgroundTint="@null"
                    android:text="@string/google"
                    android:textColor="#1A1A1A"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="14sp"
                    android:drawableLeft="@drawable/ic_google"
                    android:paddingStart="80dp"
                    android:paddingEnd="75dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/register"
            android:textColor="#2A1246"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14sp"
            android:textFontWeight="500"
            android:clickable="true"
            android:focusable="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>