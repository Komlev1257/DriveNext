<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/getting_started"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_1"
        android:layout_width="342dp"
        android:layout_height="460dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/create_acc"
                android:textSize="20sp"
                android:textFontWeight="600"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="9dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/black"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_3"
            android:layout_width="342dp"
            android:layout_height="291dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="130dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_4"
                android:layout_width="342dp"
                android:layout_height="68dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/text_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/email"
                    android:textSize="14sp"
                    android:textColor="#404040"
                    android:fontFamily="@font/montserrat_regular"/>
                <EditText
                    android:id="@+id/edit_text1"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_register_button"
                    android:textColorHint="#667085"
                    android:fontFamily="@font/montserrat_light"
                    android:inputType="textEmailAddress"
                    android:hint="@string/enter_email"
                    android:textAlignment="textStart"
                    android:paddingStart="14dp"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/text_view2"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_5"
                android:layout_width="342dp"
                android:layout_height="68dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_4"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/create_pass"
                    android:textSize="14sp"
                    android:textColor="#404040"
                    android:fontFamily="@font/montserrat_regular"/>

                <EditText
                    android:id="@+id/edit_text2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_register_button"
                    android:fontFamily="@font/montserrat_light"
                    android:inputType="textPassword"
                    android:hint="@string/enter_password"
                    android:textAlignment="textStart"
                    android:paddingStart="14dp"
                    android:textSize="14sp"
                    android:textColorHint="#667085"
                    app:layout_constraintTop_toBottomOf="@id/text_view3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/image_view1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_eye"
                    app:layout_constraintTop_toTopOf="@id/edit_text2"
                    app:layout_constraintEnd_toEndOf="@id/edit_text2"
                    app:layout_constraintBottom_toBottomOf="@id/edit_text2"
                    android:layout_marginEnd="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_6"
                android:layout_width="342dp"
                android:layout_height="68dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_5"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/text_view4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/repeat_pass"
                    android:textSize="14sp"
                    android:textColor="#404040"
                    android:fontFamily="@font/montserrat_regular"/>

                <EditText
                    android:id="@+id/edit_text3"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/shape_register_button"
                    android:fontFamily="@font/montserrat_light"
                    android:inputType="textPassword"
                    android:hint="@string/enter_password"
                    android:textAlignment="textStart"
                    android:paddingStart="14dp"
                    android:textSize="14sp"
                    android:textColorHint="#667085"
                    app:layout_constraintTop_toBottomOf="@id/text_view4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/image_view2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_eye"
                    app:layout_constraintTop_toTopOf="@id/edit_text3"
                    app:layout_constraintEnd_toEndOf="@id/edit_text3"
                    app:layout_constraintBottom_toBottomOf="@id/edit_text3"
                    android:layout_marginEnd="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="17dp"
            android:layout_height="17dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_3"
            android:layout_marginStart="2dp"
            android:buttonTint="#D0D5DD" />

        <TextView
            android:layout_width="314dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/layout_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox"
            android:text="@string/agreement"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="12sp"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:textColor="#1A1A1A"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="346dp"
        android:layout_height="54dp"
        android:layout_marginTop="728dp"
        android:backgroundTint="#2A1246"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/next"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>